# MCP Server Configuration for FramoCRM
# Enable the MCP server for VS Code Copilot integration
MCP_ENABLED=true

# Database connection (optional - falls back to main DATABASE_URL)
# MCP_DATABASE_URL=postgres://user:pass@localhost:5432/framo_crm

# Optional tools (disabled by default for security)
MCP_HTTP_ENABLED=false
MCP_FILES_ENABLED=false

# API configuration (for file operations if enabled)
# MCP_API_URL=http://localhost:4000
# MCP_API_TOKEN=your_api_token_here